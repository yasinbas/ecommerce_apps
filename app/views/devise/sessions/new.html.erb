<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
  <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
    <h3 class="text-center mb-4">Login</h3>
    <%= form_with scope: :user, url: session_path(:user), local: true do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter your email" %>
      </div>
      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
      </div>
      <div class="d-grid">
        <%= f.submit "Login", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
    <div class="text-center mt-3">
      <%= link_to "Forgot your password?", new_user_password_path, class: "text-decoration-none" %>
      <br>
      <%= link_to "Sign Up", new_user_registration_path, class: "text-decoration-none text-primary" %>
    </div>
  </div>
</div>
