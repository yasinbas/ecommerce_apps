<div class="container mt-5 text-center">
  <h1 class="display-4">Welcome to Ecommerce App</h1>
  <p class="lead">Your online store is ready to grow!</p>
  <% if user_signed_in? %>
    <p>Welcome back, <strong><%= current_user.email %></strong>!</p>
    <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger btn-lg mt-3" %>
  <% else %>
    <%= link_to "Login", new_user_session_path, class: "btn btn-primary btn-lg me-2 mt-3" %>
    <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success btn-lg mt-3" %>
  <% end %>
</div>
